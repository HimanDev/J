<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentStart="true">
        <com.example.himan.videotest.AutoFitTextureView
            android:id="@+id/texture"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.03"
            android:layout_above="@+id/linearLayout" />


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#98292929"
            android:layout_gravity="top">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:padding="10dp"
                android:baselineAligned="false">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/flash_off"
                    android:visibility="gone" />

                <Chronometer
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/chronometer"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:id="@+id/revert"
                    android:src="@drawable/reverse_camera"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout"
            android:background="#c1000000"
            android:padding="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/closeAppimageView"
                    android:src="@drawable/kill_app"
                    android:background="@drawable/circle_background"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Close App"
                    android:id="@+id/textView10" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/ivStartStop"
                    android:src="@mipmap/btn_video_online"
                    android:background="@drawable/circle_background"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Stop"
                    android:id="@+id/textView12" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center_vertical|center_horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/ivDark"
                    android:src="@drawable/dark_screen"
                    android:background="@drawable/circle_background"
                    android:padding="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Dark Screen"
                    android:id="@+id/textView11" />
            </LinearLayout>

            <Button
                android:id="@+id/mybutton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="REC"
                android:textSize="12dp"
                android:background="#ff0000"
                android:layout_below="@+id/videoview"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="false"
                android:visibility="gone" />
        </LinearLayout>
</RelativeLayout>


